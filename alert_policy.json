{
  "displayName": "MystroApp - High Error Rate",
  "combiner": "OR",
  "conditions": [
    {
      "displayName": "Error count > 5 in 5m",
      "conditionThreshold": {
        "filter": "resource.type=\"cloud_run_revision\" AND resource.labels.service_name=\"mystroapp\" AND metric.type=\"logging.googleapis.com/user/mystroapp_error_count\"",
        "comparison": "COMPARISON_GT",
        "thresholdValue": 5,
        "duration": "300s",
        "trigger": { "count": 1 }
      }
    }
  ],
  "notificationChannels": [],
  "enabled": true
}
